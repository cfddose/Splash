FoamFile
{
    format      ascii;
    class       dictionary;
    object      fvConstraints;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

//Limits the temperature to be between minimum and maximum values.

limitHe
{
    type            limitMag;
    selectionMode   all;//cellSet, cellZone, points
    field           h;
    min             47000;
    max             2.1e6;
}

limitRho
{
    type            limitMag;
    selectionMode   all;//cellSet, cellZone, points
    field           rho;
    min             0.1;
    max             755;
}

//Limits the pressure to be between minimum and maximum values.
limitp
{
    type            limitPressure;

    min             5e5;
    max             9e7;
    
    //minFactor       0.9;
    //maxFactor       1.5;
}

//Limits the temperature to be between minimum and maximum values.

limitT
{
    type            limitTemperature;
    selectionMode   all;
    min             200;
    max             600;
    field           T;
}

